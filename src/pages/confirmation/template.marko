<i18n-var/>
<script marko-init>
  const padZero = require('../../utils/pad-zero');
</script>

<layout-use("../../common/layout.marko")>

  <layout-put into="page-title">
    <i18n-message key="confirmation:booked" room-name="${data.booking.room.name}"/>
    <i18n-message key="app:serviceName"/>
  </layout-put>

  <layout-put into="content">

    <div class="grid-row">
      <div class="column-two-thirds">

        <div class="govuk-box-highlight">
          <h1 class="bold-large">
            <i18n-message key="confirmation:booked"
              room-name="${data.booking.room.name}"/>
          </h1>
          <p>
            <i18n-message key="confirmation:description"
              description="${data.booking.description}"
              name="${data.booking.name}"/><br>

            <strong class="heading-medium">
              <var start=(new Date(data.booking.start))
                end=(new Date(data.booking.end))/>

              <i18n-message key="confirmation:time" day=start.getDate()
                month=start.getMonth() year=start.getFullYear()
                start="${padZero(start.getHours())}:${padZero(start.getMinutes())}"
                end="${padZero(end.getHours())}:${padZero(end.getMinutes())}"/>
            </strong>
          </p>
        </div>

      </div>
    </div>

  </layout-put>

</layout-use>
